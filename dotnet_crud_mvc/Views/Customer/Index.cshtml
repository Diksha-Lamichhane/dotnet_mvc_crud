@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Customers";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
           
            <th>
                CustomerID
            </th>
            <th>
                Name
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-success">Create New Customers</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr>
                <td>
                    @Model.Rows[i]["Customer_ID"]
                </td>
                <td>
                    @Model.Rows[i]["Name"]
                </td>
                <td>
                    @Model.Rows[i]["Address"]
                </td>
                <td>
                    @Model.Rows[i]["Phone"]
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["Customer_ID"]" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Rows[i]["Customer_ID"]" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

